<div class="shopping-cart">
  
  <%= render "shopping_cart" %>
  
  <% unless order_items.empty? %>   
    <%= button_to "Empty Cart", {:controller => "orders", :action => 'destroy', :id => current_order.id }, :confirm => "Are you sure you want to remove these items?", :method => :delete %>
    <%= link_to("Checkout", new_transaction_path, class: "btn btn-primary pull-right") %>
    </br></br><h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency(subtotal)  %></span></h4>
  <% end %>

</div>
