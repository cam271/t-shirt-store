<% provide(:title, 'T-Shirt-Co') %>
<body>
	<!-- main image to the store -->
	<div class="row">
		<div class="col-md-offset-2"><%= image_tag("t-shirt.jpg", size: "800x500", alt: "t-shirt-graphic") %></div>
	</div>	

	<section class="shop-title">
		<h1>Shop</h1>
	</section>

	<section class="shop">
		<%= link_to(image_tag("mens.png", size: "500x300", alt: "mens-graphic"), products_path(:category => "men")) %>
		<%= link_to(image_tag("womens.png", size: "500x300", alt: "womens-graphic"), products_path(:category => "women")) %>
		<%= link_to(image_tag("boys.png", size: "500x300", alt: "boys-graphic"), products_path(:category => "boys")) %>
		<%= link_to(image_tag("girls.png", size: "500x300", alt: "girls-graphic"), products_path(:category => "girls")) %>
	</section>

</body>
